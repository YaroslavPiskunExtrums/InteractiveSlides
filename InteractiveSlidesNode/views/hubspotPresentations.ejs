<!DOCTYPE html>
<html lang="en">
<head>
    <title>
        Company Sessions
    </title>

    <!--    <link rel="stylesheet" href="../public/reveal-js/theme/black.css">-->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

</head>
<body>
<div class="p-xl-3 container-fluid">
    <div class='row row-cols-1 row-cols-md-4 g-2'>
        <% presentations.forEach((presentation) => { %>
            <div style='height: 20rem' class='col'>
                <div class="card pt-2 h-100">
                    <a target='_blank' referrerpolicy='no-referrer'
                       href='<%= apiUrl %>/api/HTML/view-presentation-origin/<%= presentation.id %>'>
                        <img class="card-img-top" style='min-height: 115px' src="<%= presentation.presentation_icon %>"
                             alt="Card image cap">
                    </a>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center">
                            <a class='text-decoration-none' target='_blank' referrerpolicy='no-referrer'
                               href='<%= apiUrl %>/api/HTML/view-presentation-origin/<%= presentation.id %>'><%= presentation.name %></a>
                        </h5>
                        <div class="card-text flex-grow-1 text-truncate"></div>
                        <a href='presentation-sessions?presentationId=<%= presentation.id %>&hs_company_id=<%= hs_company_id %>&hs_object_id=<%= hs_object_id %>&objectTheme=<%= objectTheme %>&userId=<%= userId %>&portalId=<%= portalId %>'
                           class="btn" style='background-color: #FF5630; color: #fff'>Sessions</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
</body>

</html>
